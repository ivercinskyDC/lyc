\begin_deeper
\begin_layout Standard
luego 
\begin_inset Formula $a$
\end_inset

 es una contingencia.
 Basta con tomar una 
\begin_inset Formula $\satisface{v_{1}}p$
\end_inset

 y 
\begin_inset Formula $\nosatisface{v_{1}}q$
\end_inset

entonces 
\begin_inset Formula $\nosatisface{v_{1}}a$
\end_inset

.Y, luego tomamos 
\begin_inset Formula $\satisface{v_{2}}p$
\end_inset

 y 
\begin_inset Formula $\satisface{v_{2}}q$
\end_inset

 entonces 
\begin_inset Formula $\satisface{v_{2}}a$
\end_inset


\end_layout

\end_deeper
\begin_layout Enumerate
Lo mismo que el 
\begin_inset Formula $1$
\end_inset

.
 Pero negando el los resultados.
\end_layout

\begin_layout Enumerate
La idea es buscar una 
\emph on
valuacion 
\emph default
que haga verdadera la 
\emph on
formula 
\emph default
y otra 
\emph on
valuacion 
\emph default
que haga falsa la 
\emph on
formula.
\end_layout

\begin_deeper
\begin_layout Standard
\begin_inset Formula $\VALUACION{v_{1}}r1$
\end_inset

 hace que todo sea verdadero, independientemente del resto.
\end_layout

\begin_layout Standard
Entonces, 
\begin_inset Formula $\satisface{v_{1}}{\implica pr\entonces\satisface{v_{1}}{\implica b{\implica pr}=a}}$
\end_inset


\end_layout

\begin_layout Standard
Entonces 
\begin_inset Formula $v_{1}$
\end_inset

 hace verdadera a la formula 
\begin_inset Formula $a$
\end_inset

 
\end_layout

\begin_layout Standard
\begin_inset Formula $\VALUACION{v_{2}}p1,$
\end_inset


\begin_inset Formula $\VALUACION{v_{2}}q{\VALUACION{v_{2}}r0},$
\end_inset

hace que 
\begin_inset Formula $a$
\end_inset

 sea falso.
\end_layout

\begin_layout Standard
1) 
\begin_inset Formula $\nosatisface{v_{2}}{(\conj p{q)\entonces\nosatisface{v_{2}}b}}$
\end_inset

 
\end_layout

\begin_layout Standard
2) 
\begin_inset Formula $\satisface{v_{2}}p$
\end_inset

y 
\begin_inset Formula $\nosatisface{v_{2}}r\entonces\nosatisface{v_{2}}{\implica pr}$
\end_inset


\end_layout

\begin_layout Standard
Por 1) y 2) 
\begin_inset Formula $\nosatisface{v_{2}}a\entonces$
\end_inset

es una 
\emph on
contingencia
\end_layout

\end_deeper
